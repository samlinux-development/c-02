---
import Data from '../data.json';
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
  <div class="p-4">
    <h1 class="text-6xl font-semibold pb-6">{Data.metadata.aboutMeExtendedTitle}</h1>
    <div class="mb-4">{Data.metadata.aboutMeExtendedDescription}</div>
    <a 
      href="/" 
      class="inline-block px-6 py-3 text-blue-100 no-underline bg-gradient-to-r from-cyan-500 to-blue-500 rounded hover:underline hover:text-blue-200">
      {Data.metadata.aboutMeExtendedBack}
    </a>
  </div>
</MainLayout>
