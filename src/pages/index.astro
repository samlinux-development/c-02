---
import Data from '../data.json';

import MainLayout from '../layouts/MainLayout.astro';
import Project from '../components/Project.astro';
---

<MainLayout>

	<div class="p-4 bg-red-300 inline-block">
		<h1 class="text-6xl font-semibold pb-6">{Data.metadata.title}</h1>
		<div class="flex flex-col md:flex-row justify-center items-center ">
			<img src="/janedoe.svg" class="float-none md:float-left w-48 h-48 m-6" />
			<div class="text-4xl leading-10" set:html={Data.metadata.description}></div>
		</div>
	</div>

	<div class="p-4">
		<h1 class="text-3xl">{Data.metadata.aboutMeTitle}</h1>
		<div class="mb-3">{Data.metadata.aboutMeDescription}</div>
		<a 
			href="/about" 
			class="inline-block px-6 py-3 text-blue-100 no-underline bg-gradient-to-r from-cyan-500 to-blue-500 rounded hover:underline hover:text-blue-200">{Data.metadata.aboutMeExtended}</a>
	</div>

	<div class="p-4 bg-amber-300">
		<h1 class="text-3xl">{Data.metadata.workTitle}</h1>	
		<div>{Data.metadata.workDescription}</div>
	</div>

	<div class="p-4">
		<h1 class="text-3xl">{Data.metadata.projectsTitle}</h1>
		<div>{Data.metadata.workDescription}</div>
		<div class="p-4">
			{Data.projects.map((project) => {
				return <Project project={project} />
			})}
		</div>
	</div>
	
	<div class="p-4 bg-green-300">
		<h1 class="text-3xl">{Data.metadata.contactTitle}</h1>
		<div>{Data.metadata.contactDescription}</div>
	</div>

</MainLayout>


